{
  "name": "libraries",
  "productName": "libraries",
  "version": "1.0.0",
  "description": "indows用のファイル検索アプリケーション",
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "make:mac": "electron-builder --mac --x64",
    "make:win": "electron-builder --win --x64",
    "lint": "eslint --ext .ts,.tsx .",
    "prettier": "prettier . --write"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron-forge/plugin-vite": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-vue": "^5.0.5",
    "electron": "31.2.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.25.0",
    "prettier": "^3.3.3",
    "sass": "^1.77.8",
    "ts-node": "^10.0.0",
    "typescript": "~4.5.4",
    "vite": "^5.0.12"
  },
  "keywords": [],
  "author": {
    "name": "Kosuke Iwasaki"
  },
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "vue": "^3.4.31"
  },
  "volta": {
    "node": "20.15.1",
    "npm": "10.7.0"
  },
  "build": {
    "appId": "com.electron.libraries",
    "directories": {
      "output": "dist"
    },
    "files": [
      ".vite/**/*"
    ],
    "extraMetadata": {
      "main": ".vite/build/main.js"
    },
    "mac": {
      "icon": "src/assets/images/icons/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "src/assets/images/icons/icon.ico",
      "target": "portable"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
